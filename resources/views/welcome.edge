<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Notes App</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <!-- Compiled and minified JavaScript -->
  {{ style('style') }}
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col s8">
        <div class="card">
          <div class="card-content ">
            <span class="card-title">Form</span>
            <form action="{{route('notes.store')}}" method="post">
              {{ csrfField() }}
              <div class="input-field" >
                <input id="first_name" name="name" type="text" class="validate">
                <label for="first_name">Title</label>
              </div>
              <div class="input-field">
                <textarea id="textarea1" name="description" class="materialize-textarea"></textarea>
                <label for="textarea1">Description</label>
              </div>
              <button type="submit" class="waves-effect waves-light btn"><i class="material-icons left">save</i>Save</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col s4">
        <ul class="collection with-header">
          <li class="collection-header"><h5>Information</h4></li>
          <li class="collection-item"> <strong>Name:</strong> Notas App</li>
          <li class="collection-item"><strong>Framework:</strong> AdonisJs</li>
          <li class="collection-item"><strong>Database:</strong> PostgreSql</li>
          <li class="collection-item"><strong>Social Network:</strong> @ronalruiiz</li>
        </ul>
      </div>
    </div>
    <div class="row">
      @each(note in notes)
      <div class="col s4">
        <div class="card">
          <div class="card-content ">
            <span class="card-title">{{note.name}}</span>
            <p>{{note.description}}</p>
          </div>
        </div>
      </div>
      @endeach
    </div>
  </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>
